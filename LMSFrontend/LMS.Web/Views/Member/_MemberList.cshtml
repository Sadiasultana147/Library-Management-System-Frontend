@model List<LMS.Model.MemberModel>
@{
    Layout = null; 
}
    <div class="card ">
        <div class="card-header bg-primary text-white">
            Member List
        </div>
        <div class="card-body">
        <table class="table tblMemebr">
                    <thead>
                        <tr>
                            <th>FirstName </th>
                            <th>Last Name</th>
                            <th>Registration Date</th>
                            <th>Email</th>
                            <th>Phone No</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@member.FirstName</td>
                        <td>@member.LastName</td>
                        <td>@member.RegistrationDate.Value.ToString("yyyy-MM-dd")</td>
                        <td>@member.Email</td>
                        <td>@member.PhoneNumber</td>
                       
                        <td>
                            <a href="@Url.Action("EditMember", "Member", new { id = member.MemberID })" class="btn btn-primary">Edit</a>
                            <button onclick="DeleteMember('@member.MemberID')" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
        </div>
    </div>

