@model LMS.Model.LoginModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Login</h2>
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" name="Email" asp-for="Email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" name="Password" asp-for="Password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary mt-3">Login</button>
            </form>
        </div>
    </div>
</div>
